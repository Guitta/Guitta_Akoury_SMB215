<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.gestiondesbiens.SallesActivity" >

    <ListView
        android:id="@+id/lstReservedWorkHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray" >
    </ListView>

    <ListView
        android:id="@+id/lstReservedWorkDetails"
        android:layout_width="match_parent"
        android:layout_below="@+id/lstReservedWorkHeader"
        android:layout_height="wrap_content">
        </ListView>
        
     <Button
        android:id="@+id/btnNewSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29dp"
        android:onClick="btnNewSalle_Click"
        android:text="New" />
   
    <Button
        android:id="@+id/btnSaveSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29dp"
        android:onClick="btnSaveSalle_Click"
        android:text="Save" />
   
   <Button
        android:id="@+id/btnEditSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnNewSalle"
        android:layout_marginLeft="20dp"
        android:onClick="btnEditSalle_Click"
        android:text="Edit" />
   
   <Button
        android:id="@+id/btnDeleteSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnEditSalle"
        android:layout_marginLeft="20dp"
        android:onClick="btnDeleteSalle_Click"
        android:text="Delete" />
   
   <TextView
        android:id="@+id/textViewSalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnNewSalle"

        android:layout_marginBottom="44dp"
        android:text="Salle name"
        android:textAppearance="?android:attr/textAppearanceLarge" />
       
  <EditText
        android:id="@+id/txtSalleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewSalle"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@+id/textViewSalle"
        android:ems="10" >

        <requestFocus />
    </EditText>


</RelativeLayout>
